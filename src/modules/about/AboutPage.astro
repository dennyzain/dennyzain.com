---
import { Image } from "astro:assets";
import SplitText from "@/components/SplitText.astro";
import { SITE_TITLE } from "@/consts";
import BaseLayout from "@/layouts/BaseLayout.astro";
import DockerIcon from "@/assets/icons/docker.svg";
import PosgresIcon from "@/assets/icons/postgresql.svg";
import ReactIcon from "@/assets/icons/reactjs.svg";
import PythonIcon from "@/assets/icons/python.svg";
import JestIcon from "@/assets/icons/jest.svg";
import TailwindIcon from "@/assets/icons/tailwind.svg";
import TypescriptIcon from "@/assets/icons/typescript.svg";
import PrismaIcon from "@/assets/icons/prisma.svg";
import NextIcon from "@/assets/icons/nextjs.svg";
import LinuxIcon from "@/assets/icons/linux.svg";
import AwsIcon from "@/assets/icons/aws.svg";
import picOfAuthor from "@/assets/images/sitampan1.jpg";
import myDesk from "@/assets/images/my-desk.jpg";

const techStack = [
  { name: "Docker", icon: DockerIcon, url: "https://www.docker.com/" },
  { name: "Postgres", icon: PosgresIcon, url: "https://www.postgresql.org/" },
  { name: "React", icon: ReactIcon, url: "https://reactjs.org/" },
  { name: "Python", icon: PythonIcon, url: "https://www.python.org/" },
  { name: "Jest", icon: JestIcon, url: "https://jestjs.io/" },
  { name: "AWS", icon: AwsIcon, url: "https://aws.amazon.com/" },
  { name: "Linux", icon: LinuxIcon, url: "https://www.linux.org/" },
  { name: "Tailwind", icon: TailwindIcon, url: "https://tailwindcss.com/" },
  { name: "Typescript", icon: TypescriptIcon, url: "https://www.typescriptlang.org/" },
  { name: "Prisma", icon: PrismaIcon, url: "https://www.prisma.io/" },
  { name: "NextJS", icon: NextIcon, url: "https://nextjs.org/" },
];
---

<BaseLayout title={`About | ${SITE_TITLE}`}>
  <main>
    <section class="tw-mb-5 tw-pt-36 tw-not-prose">
      <div class="tw-grid tw-grid-cols-1 tw-gap-4">
        <div class="tw-col-span-2 tw-justify-self-center tw-flex tw-flex-col tw-items-center">
          <Image
            src={picOfAuthor}
            alt="Denny Abbas Zain"
            class="tw-rounded-full tw-object-cover tw-object-center tw-w-[200px] tw-h-[300px]"
          />
          <p class="tw-text-[12px] tw-pt-5 lg:tw-text-[14px] tw-text-center">
            Software Developer | Lifelong Learner | Linux Enthusiast
          </p>
        </div>
        <div class="tw-mt-5">
          <SplitText
            title="About"
            letterClass="tw-place-self-end tw-font-monumentBold tw-text-[22px] lg:tw-text-[35px] lg:tw-py-1"
          />
          <div class="tw-prose tw-prose-favorite tw-text-[13px] lg:tw-text-[16px]">
            I'm a software developer who loves building things and learning new technologies. My
            journey started with curiosity about how computers work, and it's evolved into a passion
            for creating software that makes a difference. <br />
            <p class="tw-pt-5">
              Currently, I work as a frontend developer while exploring the exciting world of Web3,
              blockchain, and mathematics. I believe in continuous learning and sharing knowledge
              with the community.
            </p>
            <p class="tw-pt-5">
              When I'm not coding, you'll find me writing blog posts, reading books, or playing
              games. I'm always excited to collaborate on interesting projects and meet fellow
              developers.
            </p>
          </div>
        </div>

        <!-- <div
          class="
          tw-start-2
          tw-text-[16px]
          md:tw-col-start-1
          md:tw-row-start-1
          lg:tw-text-[18px]"
        >
          <span class="tw-font-medium">SWE | Lifelong Learner | Linux Enthusiasts</span>
          <ul>
            <li>✦ working as frontend developer</li>
            <li>✦ currently learning web3, blockchain, and math</li>
            <li>✦ i love memes and sh*t posts</li>
            <li>✦ writing blogs sometimes</li>
            <li>✦ i love to play games and read books</li>
          </ul>
        </Image> -->
      </div>
    </section>
    <section class="tw-not-prose">
      <h1 class="tw-font-monumentBold tw-text-[20px] lg:tw-text-[25px] tw-self-center">
        Favorite Tech Stack
      </h1>
      <div class="tw-grid tw tw-grid-rows-2 tw-gap-4 tw-my-5 tw-grid-flow-col-dense">
        {
          techStack.map(({ name, icon, url }) => (
            <a href={url} target="_blank" rel="noopener noreferrer">
              <Image src={icon} alt={name} class="tw-w-[60px] tw-h-auto tw-object-contain" />
            </a>
          ))
        }
      </div>
    </section>
    <section>
      <h1 class="tw-font-monumentBold tw-text-[20px] lg:tw-text-[25px] tw-self-center">Uses</h1>
      <Image
        src={myDesk}
        alt="uses"
        class="tw-w-[100%] tw-h-[300px] tw-object-cover tw-rounded-lg tw-object-bottom lg:tw-h-[600px] lg:tw-w-[100%]"
      />
      <div class="tw-prose tw-prose-favorite">
        <ul class="tw-mt-1 lg:tw-text-[18px]">
          <li>Macbook Pro M2 13" (8GB 512GB)</li>
          <li>
            PC
            <ul>
              <li>Processor Intel I3 10400f</li>
              <li>RAM 16GB</li>
              <li>GPU ASUS ROG RTX 4060 8GB</li>
              <li>Storage 512GB SSD and 3TB HDD</li>
              <li>OS dualboot ubuntu 22.04 and windows 11(for gaming)</li>
            </ul>
          </li>
          <li>Mouse Fantech Thor II X16</li>
          <li>Keyboard Fantech K613</li>
          <li>Monitor LG 32"</li>
          <li>Headphone Sony WH-1000XM4</li>
          <li>Gaming Chair Rexus</li>
        </ul>
      </div>
    </section>
  </main>
</BaseLayout>
